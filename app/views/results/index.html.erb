<style>
  table {
     border-collapse: collapse;
     width: 100%
  }
  table, td, th {
    border: 1px solid black;
  }
  td{
    padding: 5px;
  }
</style>
<h1>Results</h1>
<table>
  <% @notams.each do |notam| %>
    <tr></tr>
    <td>
      <p><%= Result.display_fir(notam) %></p>
    </td>
    <% @days.each do |key, day| %>
      <td>
        <% @days[key].each do |day| %>
          <% if notam.include? day %>
            <p><%= Result.days(notam, day)%></p>
            <% break %>
          <% end %>
        <% end %>
      </td>
    <% end %>
  <% end %>
</table>
